
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div ng-controller="QLBrandController">
<div class="card" >
    <div class="card-body" >
        <h4 class="card-title">Quản lý thương hiệu</h4>
        <button type="button" class="btn btn-info btn--raised" id="btnAdd" data-toggle="modal" data-target="#modal-default" ng-click="ThemDTNB()">Thêm</button>
        <div class="table-responsive" >
            <table id="data-table" class="table table-bordered">
                <thead class="thead-default">
                    <tr>
                       
                        <th>Tên thương hiệu</th>
                        <th>Hình ảnh</th>
                        <th>Mô tả</th>
                        <th>Sửa</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                @*<tfoot>
                    <tr>
                        <th>id</th>
                        <th>Tên thương hiệu</th>
                        <th>Hình ảnh</th>
                        <th>Mô tả</th>
                        <th>Sửa</th>
                        <th>Xóa</th>
                    </tr>
                </tfoot>*@
                <tbody>

                    <tr ng-repeat="nb in listthuonghieu" ng-class-even="'even'" ng-class-odd="'odd'">
                        
                        <td>{{nb.name}}</td>
                        <td><img src="~/Assets/client/image/{{nb.image}}" width="120px" alt="Alternate Text" /></td>
                        <td>{{nb.description}}</td>
                        <td><a data-toggle="modal" data-target="#modal-default" ng-click="SuaDTNB(nb)"><i class="zmdi zmdi-edit zmdi-hc-fw" style="color: black"></i></a></td>
                        <td><a ng-click="XoaDTNB(nb)" class="delete" name="delete"><i class="zmdi zmdi-delete zmdi-hc-fw delete-v" style="color: black"></i></a></td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-default" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title pull-left">{{f}}</h5>
            </div>
            <div class="modal-body">
                <span id="form_result"></span>
                <form action="" method="post" id="sample_form" onsubmit="my();">
                    <div class="form-group">
                        <label for="">Tên thương hiệu: </label>
                        <input type="text" placeholder="Nhập tên thương hiệu" name="brandname" id="brandname" ng-model="sp.name"
                               class="form-control">
                        <i class="form-group__bar"></i>
                    </div>
                    <div class="form-group">
                        <label for="">Ảnh:</label>
                        <input type="file" name="image" id="image" class="form-control" readonly ng-model="sp.image" ngf-select="UploadFiles($files,'Anh')">
                    </div>
                    <div class="form-group">
                        <label for="">Mô tả: </label>
                        <textarea name="description" id="description" class="form-control" placeholder="" ng-model="sp.description"></textarea>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                @*<input type="hidden" name="action" id="action" />
                <input type="hidden" name="hidden_id" id="hidden_id">*@
                <button ng-click="SaveDTNB()" style="width:100px;height:40px;border:1px solid #808080;background:blue;color:white;" type="button">{{buttex}}</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
    </div>
<script src="~/Scripts/controllers/Qli.js"></script>